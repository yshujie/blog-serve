# 使用官方 Golang 镜像作为基础镜像
FROM golang:1.24-alpine

# 安装基础工具
RUN apk add --no-cache git make

# 安装 air
RUN go install github.com/cosmtrek/air@latest

# 设置工作目录
WORKDIR /app

# 设置代理
ENV GOPROXY=https://goproxy.cn,direct
ENV GO111MODULE=on

# 复制 go.mod 和 go.sum 文件
COPY go.mod go.sum ./

# 下载依赖
RUN go mod download

# 复制源代码
COPY . .

# 暴露端口
EXPOSE 8081

# 使用 air 启动服务
CMD ["air", "-c", ".air.toml"]