# 使用官方 Golang 镜像作为基础镜像
FROM golang:1.21-alpine

# 安装必要的工具
RUN apk add --no-cache git make

# 设置 Go 环境变量
ENV GO111MODULE=on \
  GOPROXY=https://goproxy.cn,direct \
  CGO_ENABLED=0

# 安装 air
RUN go install github.com/cosmtrek/air@v1.49.0

# 复制 go.mod 和 go.sum
COPY go.mod go.sum ./

# 下载依赖
RUN go mod download

# 复制源代码
COPY . .

# 暴露端口
EXPOSE 8081

# 使用 air 启动服务
CMD ["air", "-c", ".air.toml"]